<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegel_Wetter_DFFUDC.ViewModel.DetailPage"
             Title="DetailPage">
    <VerticalStackLayout>
        <Label Text="Name der Messstation:" FontAttributes="Bold"/>
        <Label Text="{Binding measurementStationName}" />

        <Label Text="Longitude:" FontAttributes="Bold"/>
        <Label Text="{Binding lon}" />

        <Label Text="Latitude:" FontAttributes="Bold"/>
        <Label Text="{Binding lat}" />

        <Label Text="Datum:" FontAttributes="Bold"/>
        <Label Text="{Binding date}" />

        <Label Text="Information:" FontAttributes="Bold"/>
        <Label Text="{Binding information}" />

        <Label Text="Messdaten:" FontAttributes="Bold"/>
        <Label Text="{Binding measurementData}" />
    </VerticalStackLayout>
</ContentPage>