<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegel_Wetter_DFFUDC.ViewModel.DetailPageWater"
             Title="DetailPageWater">
    <VerticalStackLayout>
        <Label Text="Name der Messstation:" FontAttributes="Bold"/>
        <Label Text="{Binding longname}" />

        <Label Text="Longitude:" FontAttributes="Bold"/>
        <Label Text="{Binding longitude}" />

        <Label Text="Latitude:" FontAttributes="Bold"/>
        <Label Text="{Binding latitude}" />

        <Label Text="Information:" FontAttributes="Bold"/>
        <Label Text="{Binding water}" />

        <Label Text="Messdaten:" FontAttributes="Bold"/>
        <Label Text="{Binding currentMeasuremen}" />

    </VerticalStackLayout>
</ContentPage>