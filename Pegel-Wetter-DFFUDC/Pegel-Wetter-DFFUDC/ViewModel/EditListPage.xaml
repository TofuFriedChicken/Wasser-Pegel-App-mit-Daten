<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegel_Wetter_DFFUDC.ViewModel.EditListPage"
             Title="EditListPage">
    <VerticalStackLayout>
        <StackLayout>
        <Label Text="Name der Messstation:"/>
        <Entry x:Name="measurementStationNameEntry" Placeholder="{Binding measurementStationName}" Text="{Binding measurementStationName}"/>

        <Label Text="Lage der Messstation:"/>
        <Entry x:Name="lonEntry" Placeholder="{Binding lon}" Text="{Binding lon}"/>
        <Entry x:Name="latEntry" Placeholder="{Binding lat}" Text="{Binding lat}"/>

        <Label Text="Datum der Messung:"/>
        <Entry x:Name="dateEntry" Placeholder="{Binding date}" Text="{Binding date}"/>

        <Label Text="Angaben zum Gewässer:"/>
        <Entry x:Name="informationEntry" Placeholder="{Binding information}" Text="{Binding information}"/>

        <Label Text="Höhe des Pegelstands in cm"/>
        <Entry x:Name="measurementDataEntry" Placeholder="{Binding measurementData}" Text="{Binding measurementData}"/>

        <Button Text="Edit" Clicked="EditButtonClicked"/>
    </StackLayout>
    </VerticalStackLayout>
</ContentPage>