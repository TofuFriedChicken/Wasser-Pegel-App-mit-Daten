<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegel_Wetter_DFFUDC.ViewModel.DetailPageRain"
             Title="DetailPage">
    <VerticalStackLayout>
        <Label Text="Name der Messstation:" FontAttributes="Bold"/>
        <Label Text="{Binding StationName}" />

        <Label Text="Longitude:" FontAttributes="Bold"/>
        <Label Text="{Binding Longitude}" />

        <Label Text="Latitude:" FontAttributes="Bold"/>
        <Label Text="{Binding Latitude}" />

        <Label Text="Information:" FontAttributes="Bold"/>
        <Label Text="{Binding StationID}" />

        <Label Text="Messdaten:" FontAttributes="Bold"/>
        <Label Text="{Binding measurementData}" />

    </VerticalStackLayout>
</ContentPage>