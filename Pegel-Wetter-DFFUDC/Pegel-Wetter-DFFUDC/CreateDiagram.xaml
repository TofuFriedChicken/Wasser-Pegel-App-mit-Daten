<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pegel_Wetter_DFFUDC.CreateDiagram"
             xmlns:local="clr-namespace:Pegel_Wetter_DFFUDC"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui">
    
    <ContentPage.BindingContext>
        <local:ViewModelDiagramm />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <lvc:CartesianChart
                Grid.Row="0"
                Series="{Binding Rainfall}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxesrainfall}"
                ZoomMode="X">
            </lvc:CartesianChart>

            <lvc:CartesianChart
                Grid.Row="1"
                Series="{Binding level}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxeslevel}"
                ZoomMode="X">
            </lvc:CartesianChart>

        </Grid>
    </ContentPage.Content>
    
</ContentPage>